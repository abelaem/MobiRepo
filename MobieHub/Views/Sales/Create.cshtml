@model MovieHub.ViewModels.SalesViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_bodyless.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("New", "Sales"))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Reference)
        @Html.TextBoxFor(x => x.Reference, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Reference)


    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Partner.Name, new { @class = "control-label " })
        @Html.TextBoxFor(x => x.Partner.Name, new { @class = "form-control partnerName" })
        @Html.ValidationMessageFor(x => x.Reference)
        @Html.HiddenFor(x => x.PartnerId, new { @class = "PartnerId" });


    </div>


}


